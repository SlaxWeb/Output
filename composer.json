{
    "name": "slaxweb/output",
    "description": "Handling output for the SlaxWeb Framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomaz Lovrec",
            "email": "tomaz.lovrec@gmail.com"
        }
    ],
    "require": {
        "php":  ">=7.0.0",
        "slaxweb/logger": "~0.3",
        "slaxweb/config": "~0.2",
        "slaxweb/router": "~0.4"
    },
    "require-dev": {
        "codeception/codeception": "~2.2",
        "codeception/specify": "*",
        "mockery/mockery": "~0.9",
        "slaxweb/view": "~0.4"
    },
    "suggest": {
        "slaxweb/view": "Required if you wish to use the View Handler"
    },
    "autoload": {
        "psr-4": {
            "SlaxWeb\\Output\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlaxWeb\\Output\\Test\\Unit\\": "tests/unit/"
        }
    }
}
